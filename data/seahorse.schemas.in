<gconfschemafile>
	<schemalist>
		<schema>
			<key>/schemas/apps/seahorse/preferences/default_key</key>
			<applyto>/apps/seahorse/preferences/default_key</applyto>
			<owner>seahorse</owner>
			<type>string</type>
			<default></default>
			<locale name="C">
				<short>Default Key</short>
				<long>ID of the default key to use for signing and adding a revoker.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/preferences/text_mode</key>
			<applyto>/apps/seahorse/preferences/text_mode</applyto>
			<owner>seahorse</owner>
			<type>bool</type>
			<default>FALSE</default>
			<locale name="C">
				<short>Use Canonical Text Mode</short>
				<long>If enabled, relevant output will be in canonical text mode.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/preferences/ascii_armor</key>
			<applyto>/apps/seahorse/preferences/ascii_armor</applyto>
			<owner>seahorse</owner>
			<type>bool</type>
			<default>TRUE</default>
			<locale name="C">
				<short>Use Ascii Armor</short>
				<long>If enabled, relevant output (file or text) will be encoded in ascii armor.
				Output that is not in ascii armor is not viewable with a regular text viewer.
				Key servers only accept ascii armored keys.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/listing/progress_update</key>
			<applyto>/apps/seahorse/listing/progress_update</applyto>
			<owner>seahorse</owner>
			<type>int</type>
			<default>20</default>
			<locale name="C">
				<short>Progress update for listing operations</short>
				<long>When to emit a progress signal during a key listing operation.
				The default is to update the progress bar every 20 keys.
				-1 indicates never.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/ui/statusbar_visible</key>
			<applyto>/apps/seahorse/ui/statusbar_visible</applyto>
			<owner>seahorse</owner>
			<type>bool</type>
			<default>TRUE</default>
			<locale name="C">
				<short>If the statusbar is visible</short>
				<long>Controls the visibility of the key manager's statusbar.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/ui/toolbar_visible</key>
			<applyto>/apps/seahorse/ui/toolbar_visible</applyto>
			<owner>seahorse</owner>
			<type>bool</type>
			<default>TRUE</default>
			<locale name="C">
				<short>If the toolbar is visible</short>
				<long>Controls the visibility of the key manager's toolbar.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/seahorse/ui/toolbar_style</key>
			<applyto>/apps/seahorse/ui/toolbar_style</applyto>
			<owner>seahorse</owner>
			<type>string</type>
			<default>default</default>
			<locale name="C">
				<short>Style of toolbar buttons and labels</short>
				<long>The toolbar button and label style. Options are
				'default', 'both', 'both_horiz', 'icons', and 'text'.</long>
			</locale>
		</schema>
	</schemalist>
</gconfschemafile>
